<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/header_blue_bg">

    <LinearLayout
        android:id="@+id/white_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="180dp"
        android:orientation="vertical"
        android:background="@drawable/header_white_bg"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/textView_Congrats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Congratulations!"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="65dp" />

        <ImageView
            android:id="@+id/successIcon"
            android:layout_width="220dp"
            android:layout_height="200dp"
            android:src="@drawable/register"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/textSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account created successfully!\n You're all set to explore."
            android:textSize="16sp"
            android:textColor="#000000"
            android:gravity="center"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/buttonGoLogin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/rounded_button_blue"
            android:text="Go to Login"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circle_blue_bg" />

        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/circle_white_bg">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:src="@drawable/logo"
                android:scaleType="fitCenter" />
        </FrameLayout>
    </FrameLayout>
</RelativeLayout>