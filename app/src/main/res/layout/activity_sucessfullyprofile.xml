<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/header_blue_bg">


    <LinearLayout
        android:id="@+id/white_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="180dp"
        android:orientation="vertical"
        android:background="@drawable/header_white_bg"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/textView_Congrats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Congratulations!"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="65dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your profile has been changed"
            android:textSize="20sp"
            android:textColor="#334443"
            android:gravity="center"
            android:layout_marginTop="12dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Successfully!"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginTop="12dp" />

        <Button
            android:id="@+id/button_GoDashboard"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Go to Dashboard"
            android:background="@drawable/rounded_button_blue"
            android:textColor="#FFFFFF"
            android:layout_marginTop="130dp" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circle_blue_bg" />

        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/circle_white_bg">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/changeprofileicon"
                android:scaleType="fitCenter" />
        </FrameLayout>
    </FrameLayout>
</RelativeLayout>
