<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/dialog_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medicine Schedule"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:textColor="@android:color/black"/>

        <!-- Dosage Form -->
        <TextView
            android:id="@+id/dosageFormLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dosage Form:"
            android:textStyle="bold"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/tabletsCheckbox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tablets"/>
            <CheckBox
                android:id="@+id/capsulesCheckbox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Capsules"/>
            <CheckBox
                android:id="@+id/liquidMedsCheckbox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Liquid meds"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <CheckBox
                android:id="@+id/creamsCheckbox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Creams"/>
            <CheckBox
                android:id="@+id/patchesCheckbox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Patches"/>
            <CheckBox
                android:id="@+id/spraysCheckbox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sprays"/>
        </LinearLayout>

        <EditText
            android:id="@+id/medNameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name of Medicine"
            android:layout_marginTop="15dp"/>

        <EditText
            android:id="@+id/medUsageInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dosage"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/medDescInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description/Quality"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/medicineTakenLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medicine intake timing"
            android:textStyle="bold"
            android:layout_marginTop="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp">

            <CheckBox
                android:id="@+id/beforeBreakfastCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Before Breakfast"/>
            <CheckBox
                android:id="@+id/afterBreakfastCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="After Breakfast"/>
            <CheckBox
                android:id="@+id/beforeLunchCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Before Lunch"/>
            <CheckBox
                android:id="@+id/afterLunchCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="After Lunch"/>
            <CheckBox
                android:id="@+id/beforeDinnerCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Before Dinner"/>
            <CheckBox
                android:id="@+id/afterDinnerCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="After Dinner"/>
        </LinearLayout>

        <TextView
            android:id="@+id/setTimeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Time:"
            android:textStyle="bold"
            android:layout_marginTop="15dp"/>

        <TimePicker
            android:id="@+id/timePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CANCEL"
                android:background="?android:attr/selectableItemBackground"
                android:textColor="@android:color/black"
                android:minWidth="100dp"/>

            <Button
                android:id="@+id/btnOk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OK"
                android:layout_marginStart="10dp"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:textColor="@android:color/white"
                android:minWidth="100dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>